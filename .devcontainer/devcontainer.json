// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/devcontainers/images/tree/main/src/base-ubuntu
{
  "name": "ss-cpp",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "capAdd": [
    // Enable ptrace-based debugging for C++
    "SYS_PTRACE"
  ],
  "securityOpt": [
    "seccomp=unconfined"
  ],
  "containerEnv": {
    "TZ": "Asia/Shanghai"
  },
  // https://github.com/devcontainers/features
  // Using features in vscode requires access github with uncomment the below
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/msclock/features/vcpkg:2": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "ss-cpp"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "mhutchie.git-graph",
        "ms-vscode.cmake-tools"
      ]
    }
  },
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": {
    "git-completions": "echo 'source /usr/share/bash-completion/completions/git' >> ~/.bashrc",
    "workspace-permission": "sudo chown -R ss-cpp:ss-cpp ${containerWorkspaceFolder}"
  },
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "ss-cpp"
}
