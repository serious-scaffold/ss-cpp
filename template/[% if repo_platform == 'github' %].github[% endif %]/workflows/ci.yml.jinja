      - name: Install valgrind
        run: sudo apt-get install valgrind

      # Use Valgrind must disable sanitizer
      - name: Configure CMake
        run: >
          cmake -S . --preset=default
          -DCMAKE_BUILD_TYPE={{ '${{ matrix.build_type }}' }}
          -DCMAKE_CXX_STANDARD=20
